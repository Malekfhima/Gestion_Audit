# ==============================================
# ENVIRONMENT VARIABLES EXAMPLE FILE
# ==============================================
# Copy this file to .env and fill in your actual values
# This file should be committed to version control
# The actual .env file should NEVER be committed

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For local: mongodb://localhost:27017/audit_gestion
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/audit_gestion

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Port number for the Express server to listen on
PORT=4000

# Node environment (development, production, test)
NODE_ENV=development

# ==============================================
# JWT AUTHENTICATION CONFIGURATION
# ==============================================
# Secret key for signing JWT access tokens
# Should be a long random string (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Secret key for signing JWT refresh tokens
# Should be different from JWT_SECRET
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this

# JWT access token expiration time (e.g., 15m, 1h, 1d)
JWT_EXPIRES_IN=1h

# JWT refresh token expiration time (e.g., 7d, 30d)
REFRESH_TOKEN_EXPIRES_IN=7d

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins for CORS
# For local development: http://localhost:3000,http://localhost:5173
CORS_ORIGIN=http://localhost:3000

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=debug

# ==============================================
# FILE UPLOAD CONFIGURATION (if needed)
# ==============================================
# Maximum file upload size in bytes (e.g., 5242880 = 5MB)
MAX_FILE_SIZE=5242880

# Directory to store uploaded files
UPLOAD_DIR=./uploads

# ==============================================
# EMAIL CONFIGURATION (for notifications)
# ==============================================
# SMTP server configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password
# EMAIL_FROM=noreply@yourdomain.com

# ==============================================
# PAGINATION DEFAULTS
# ==============================================
# Default number of items per page
DEFAULT_PAGE_SIZE=10

# Maximum allowed items per page
MAX_PAGE_SIZE=100

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Rate limiting: maximum requests per window
RATE_LIMIT_MAX=100

# Rate limiting: window duration in minutes
RATE_LIMIT_WINDOW=15

# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=10
